    Public Sub Connect()
        If Not Connection Then
            Console.WriteLine("Establishing mind-body connection...")
            Console.WriteLine("Connection established.")
        Else
            Console.WriteLine("Connection already established.")
        End If
    End Sub
    
    Public Sub Disconnect()
        If Connection Then
            Console.WriteLine("Disconnecting mind-body connection...")
            Console.WriteLine("Connection disconnected.")
        Else
            Console.WriteLine("No connection to disconnect.")
        End If
    End Sub
    
    Public Sub CheckIfMindBodyConnected()
